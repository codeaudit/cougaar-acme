####################################################
# Rule to insert StimulatorServlet to all agents 
# plugin = org.cougaar.core.servlet.BlackboardServletComponent

servlet = "org.cougaar.core.servlet.BlackboardServletComponent"

society.each_agent do |agent|
  agent.add_component do |c|
    c.classname = servlet
    c.add_argument("org.cougaar.glm.servlet.GLMStimulatorServlet")
    c.add_argument("/stimulator")
  end
end

