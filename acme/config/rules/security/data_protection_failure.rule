# Rule to insert DataProtectionSensor to all node agents
# plugin = org.cougaar.core.security.monitoring.plugin.DataProtectionSensor

plugin = "org.cougaar.core.security.monitoring.plugin.DataProtectionSensor"

society.each_node_agent() do |node_agent|
   node_agent.add_component do |c|
      c.classname = plugin
    end
end
