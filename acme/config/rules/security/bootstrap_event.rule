# Rule to insert BootStrapEventPlugin to all node agents
# plugin = org.cougaar.core.security.monitoring.plugin.BootStrapEventPlugin

plugin = "org.cougaar.core.security.monitoring.plugin.BootStrapEventPlugin"

society.each_node_agent() do |node_agent|
   node_agent.add_component do |c|
      c.classname = plugin
    end
end
