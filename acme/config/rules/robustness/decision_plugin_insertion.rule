####################################################
# decision_plugin_insertion.rule
# Rule to insert the DecisionPlugin into 
# Robustness Management nodes and agents

society.each_agent(true) do |agent|
  if agent.name =~ /.*RobustnessManager/
    agent.add_component do |c|
      c.classname = "org.cougaar.tools.robustness.ma.plugins.DecisionPlugin"
    end
  end
end
