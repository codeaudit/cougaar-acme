####################################################
# ping_requester_insertion.rule
# Rule to insert the PingRequesterPlugin into 
# Robustness Management nodes and agents

society.each_agent(true) do |agent|
  if agent.name =~ /.*RobustnessManager/
    agent.add_component do |c|
      c.classname = "org.cougaar.tools.robustness.sensors.PingRequesterPlugin"
    end
  end
end
