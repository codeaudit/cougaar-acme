####################################################
# Rule to insert FcsInventoryServletComponent
# 
# UA: plugin = com.bbn.fcss.servlet.FcsInventoryServletComponent


fcs_inventory_servlet = "com.bbn.fcss.servlet.FcsInventoryServletComponent"

society.each_agent do |agent|
  if agent.get_facet(:is_ua)
    agent.add_component do |c|
      c.classname = fcs_inventory_servlet
      c.add_argument(fcs_inventory_servlet)
      c.add_argument('/fcs_inventory')
    end
  end
end
