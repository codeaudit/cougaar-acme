####################################################
# Rule to insert Theater Ground Plugins
# Just at TheaterGround: (echelon_group = "Transcom") && (role = "TheaterStrategicTransportationProvider")
# plugin = org.cougaar.logistics.plugin.trans.GroundVishnuPlugin(envFile=GLMT.Transport.env.xml)
# plugin = org.cougaar.logistics.plugin.trans.GroundTransportAllocatorPlugin(envFile=GLMT.Transport.env.xml)
# plugin = org.cougaar.logistics.plugin.trans.TransportExpanderPlugin(envFile=GLMT.Transport.env.xml)

ground_vishnu_plugin = "org.cougaar.logistics.plugin.trans.GroundVishnuPlugin"
ground_transport_allocator_plugin = "org.cougaar.logistics.plugin.trans.GroundTransportAllocatorPlugin"
transport_expander_plugin = "org.cougaar.logistics.plugin.trans.TransportExpanderPlugin"

society.each_agent do |agent|
  if agent.get_facet(:echelon_group) == "Transcom"
    agent.each_facet(:role) do |facet|
      if facet[:role] == "TheaterStrategicTransportationProvider"
        agent.add_component do |c|
          c.classname = ground_vishnu_plugin
          c.add_argument("envFile=GLMT.Transport.env.xml")
        end
        agent.add_component do |c|
          c.classname = ground_transport_allocator_plugin
          c.add_argument("envFile=GLMT.Transport.env.xml")
        end
        agent.add_component do |c|
          c.classname = transport_expander_plugin
          c.add_argument("envFile=GLMT.Transport.env.xml")
        end
      end
    end
  end
end
