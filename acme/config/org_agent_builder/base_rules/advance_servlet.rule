####################################################
# Rule to insert the SimpleTimeAdvanceComponent servlet into the OpertionalCommmanderInChief
#
# plugin = org.cougaar.planning.plugin.completion.SimpleTimeAdvanceComponent(DEAD_NODE_TIMEOUT=180000, NORMAL_TIME_ADVANCE_DELAY=800000

advanceServlet = "org.cougaar.planning.plugin.completion.SimpleTimeAdvanceComponent"

society.each_agent do |agent|
  if agent.has_facet? { |facet| facet[:role]=='OperationalCommanderInChief'}
    agent.add_component do |c|
      c.classname = advanceServlet
      c.add_argument("DEAD_NODE_TIMEOUT=180000")
      c.add_argument("NORMAL_TIME_ADVANCE_DELAY=300000")
    end
  end
end
