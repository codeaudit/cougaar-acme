# Rule to insert LogisticsOplanPlugin
# plugin = org.cougaar.logistics.plugin.inventory.LogisticsOPlanPlugin

logistics_oplan_plugin = "org.cougaar.logistics.plugin.inventory.LogisticsOPlanPlugin"

society.each_agent do |agent|
  if agent.get_facet(:has_physical_assets)
    agent.add_component do |c|
      c.classname = logistics_oplan_plugin
    end
  end
end
