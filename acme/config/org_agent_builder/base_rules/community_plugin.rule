# Rule to insert CommunityPlugin everywhere
# plugin = org.cougaar.community.CommunityPlugin

community_plugin = "org.cougaar.community.CommunityPlugin"

# Adding the 'true' option makes this rule apply to nodeAgents to.
society.each_agent(true) do |agent|
  agent.add_component do |c|
    c.classname = community_plugin
  end
end
