####################################################
# Rule to insert OpConInfoPlugin
#   at every agent with subordinates
#
# plugin = org.cougaar.mlm.plugin.organization.OpConInfoPlugin

opcon_info_plugin = "org.cougaar.mlm.plugin.organization.OpConInfoPlugin"

society.each_agent do |agent|
  if agent.has_facet?(:subordinate_org_id)
    agent.add_component do |c|
      c.classname = opcon_info_plugin
    end
  end
end
