####################################################
# Rule to insert StrategicTransportProjectorPlugin
# plugin = org.cougaar.mlm.plugin.sample.StrategicTransportProjectorPlugin(OriginFile=None)

strategic_transport_projector_plugin = "org.cougaar.mlm.plugin.sample.StrategicTransportProjectorPlugin"
society.each_agent do |agent|
  if agent.get_facet(:is_deployable)
    agent.add_component do |c|
      c.classname = strategic_transport_projector_plugin
      c.add_argument('OriginFile=None')
    end
  end
end