####################################################
# Rule to insert SequentialGlobalSeaPlugin
# Just at MSC.TRANSCOM.MIL (formerly GlobalSea): (echelon_group = "Transcom") && (role = "SeaTransportationProvider")
# plugin = org.cougaar.logistics.plugin.trans.SequentialGlobalSeaPlugin

sequential_global_sea_plugin = "org.cougaar.logistics.plugin.trans.SequentialGlobalSeaPlugin"

society.each_agent do |agent|
  if agent.get_facet(:echelon_group) == "Transcom"
    agent.each_facet(:role) do |facet|
      if facet[:role] == "SeaTransportationProvider"
        agent.add_component do |c|
          c.classname = sequential_global_sea_plugin
          c.add_argument("envFile=GLMT.Transport.env.xml")
        end
      end
    end
  end
end
