####################################################
# Rule to insert GLSInitServlet
# plugin = org.cougaar.mlm.plugin.organization.GLSInitServlet(093FF.oplan.q)

gls_init_servlet = "org.cougaar.mlm.plugin.organization.GLSInitServlet"

society.each_agent do |agent|
  agent.each_facet(:role) do |facet|
    if facet[:role] == 'LogisticsCommanderInChief'
      agent.add_component do |c|
        c.classname = gls_init_servlet
        c.add_argument("093FF.oplan.noncsmart.q")
      end
    end
  end
end
