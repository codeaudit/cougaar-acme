####################################################
# Rule to insert StrategicTransportProjectionExpanderPlugin
# plugin = org.cougaar.mlm.plugin.sample.StrategicTransportProjectionExpanderPlugin

strategic_transport_projection_exp_plugin = "org.cougaar.mlm.plugin.sample.StrategicTransportProjectionExpanderPlugin"

society.each_agent do |agent|
  if agent.get_facet(:is_deployable) && agent.get_facet(:has_physical_assets)
    agent.add_component do |c|
      c.classname = strategic_transport_projection_exp_plugin
    end
  end
end
