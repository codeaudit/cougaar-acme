####################################################
# Rule to insert AllocationAssessorPlugin
#   at deployable agents
#
# 1AD: plugin = org.cougaar.mlm.plugin.sample.AllocationAssessorPlugin

allocation_assessor_plugin = "org.cougaar.mlm.plugin.sample.AllocationAssessorPlugin"

society.each_agent do |agent|
  if agent.get_facet(:is_deployable)      
    agent.add_component do |c|
      c.classname = allocation_assessor_plugin
    end
  end
end
