####################################################
# Rule to insert GetOplanPlugin
#   at deployable agents
#
# 1AD: plugin = org.cougaar.mlm.plugin.ldm.GetOplanPlugin

get_oplan_plugin = "org.cougaar.mlm.plugin.ldm.GetOplanPlugin"

society.each_agent do |agent|
  if agent.get_facet(:is_deployable)      
    agent.add_component do |c|
      c.classname = get_oplan_plugin
    end
  end
end
