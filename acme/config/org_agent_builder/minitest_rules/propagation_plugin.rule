# Rule to insert PropagationPlugin 

# Rule to insert.PropagationPlugin everywhere
# plugin = plugin = org.cougaar.mlm.plugin.generic.PropagationPlugin(forward.xml)

propagation_plugin = "org.cougaar.mlm.plugin.generic.PropagationPlugin"

society.each_agent do |agent|
  agent.add_component do |c|
    c.classname = propagation_plugin
    c.add_argument("forward.xml")
  end
end

