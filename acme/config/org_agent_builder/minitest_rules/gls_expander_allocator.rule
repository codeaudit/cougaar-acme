####################################################
# Rule to insert GLSMiniExpander and GLSMiniAllocator Plugins with arguments
# plugin = org.cougaar.mlm.plugin.organization.GLSMiniAllocatorPlugin
# plugin = org.cougaar.mlm.plugin.organization.GLSMiniExpanderPlugin

gls_mini_allocator_plugin = "org.cougaar.mlm.plugin.organization.GLSMiniAllocatorPlugin"
gls_mini_expander_plugin = "org.cougaar.mlm.plugin.organization.GLSMiniExpanderPlugin"

society.each_agent do |agent|
  agent.add_component do |c|
    c.classname = gls_mini_expander_plugin
    c.add_argument("StrategicTransportation") 
  end
  
  agent.add_component do |c|
    c.classname = gls_mini_allocator_plugin
  end
end
